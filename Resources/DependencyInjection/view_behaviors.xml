<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="heidel_payment.view_behaviors.invoice" class="HeidelPayment\Services\ViewBehaviorHandler\InvoiceViewBehaviorHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.api_logger"/>

            <tag name="heidelpay.view_behavior" payment="heidelInvoice"/>
        </service>

        <service id="heidel_payment.view_behaviors.invoice_guaranteed" class="HeidelPayment\Services\ViewBehaviorHandler\InvoiceViewBehaviorHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.api_logger"/>

            <tag name="heidelpay.view_behavior" payment="heidelInvoiceGuaranteed"/>
        </service>

        <service id="heidel_payment.view_behaviors.invoice_factoring" class="HeidelPayment\Services\ViewBehaviorHandler\InvoiceViewBehaviorHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.api_logger"/>

            <tag name="heidelpay.view_behavior" payment="heidelInvoiceFactoring"/>
        </service>
    </services>
</container>
