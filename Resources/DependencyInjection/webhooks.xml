<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="heidel_payment.webhooks.payment_completed" class="HeidelPayment\Services\Heidelpay\Webhooks\Handlers\PaymentCompletedHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.order_status"/>

            <tag name="heidelpay.webhook_handler" hook="payment.completed"/>
        </service>

        <service id="heidel_payment.webhooks.payment_pending" class="HeidelPayment\Services\Heidelpay\Webhooks\Handlers\PaymentPendingHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.order_status"/>

            <tag name="heidelpay.webhook_handler" hook="payment.pending"/>
        </service>

        <service id="heidel_payment.webhooks.payment_canceled" class="HeidelPayment\Services\Heidelpay\Webhooks\Handlers\PaymentCanceledHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.order_status"/>

            <tag name="heidelpay.webhook_handler" hook="payment.canceled"/>
        </service>

        <service id="heidel_payment.webhooks.payment_partly" class="HeidelPayment\Services\Heidelpay\Webhooks\Handlers\PaymentPartlyHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.order_status"/>

            <tag name="heidelpay.webhook_handler" hook="payment.partly"/>
        </service>

        <service id="heidel_payment.webhooks.payment_review" class="HeidelPayment\Services\Heidelpay\Webhooks\Handlers\PaymentReviewHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.order_status"/>

            <tag name="heidelpay.webhook_handler" hook="payment.payment_review"/>
        </service>

        <service id="heidel_payment.webhooks.payment_charge_back" class="HeidelPayment\Services\Heidelpay\Webhooks\Handlers\PaymentChargeBackHandler">
            <argument type="service" id="heidel_payment.services.api_client"/>
            <argument type="service" id="heidel_payment.services.order_status"/>

            <tag name="heidelpay.webhook_handler" hook="payment.chargeback"/>
        </service>
    </services>
</container>
