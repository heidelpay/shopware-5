<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="heidel_payment.data_providers.customer" class="HeidelPayment\Services\Heidelpay\DataProviders\CustomerProvider">
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="heidel_payment.data_providers.basket" class="HeidelPayment\Services\Heidelpay\DataProviders\BasketProvider" />
        <service id="heidel_payment.data_providers.metadata" class="HeidelPayment\Services\Heidelpay\DataProviders\MetadataProvider" />
        <service id="heidel_payment.array_hydrator.payment" class="HeidelPayment\Services\Heidelpay\ArrayHydrators\PaymentArrayHydrator" />
    </services>
</container>
